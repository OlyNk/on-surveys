<% include ./partials/adminTop %>

<div class="col-10 mainarea fullheight">
    <div class="patientInfoTable">
        <h1>Patient information</h1>
        <table class="table table-sm ">
            <tbody>
                <tr>
                    <th scope="row">Name</th>
                    <td><%= patient.firstName %></td>
                </tr>
                <tr>
                    <th scope="row">Last Name</th>
                    <td><%= patient.lastName %></td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td><%= patient.email %></td>
                </tr>
            </tbody>
        </table>
        <h3>Surveys answered</h3>
        <div class="list-group" id="userSurveyList">
            <% surveys.forEach(answeredSurvey =>{ %>
            <div href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= answeredSurvey.surveyTitle %></h5>
                    <small class="text-muted"><%=moment(answeredSurvey.createdAt).fromNow()%></small>
                </div>
                <div class="d-flex w-100 justify-content-end">
                    <a href="/admin/viewAnsweredSurvey/<%=patient._id%>/<%=answeredSurvey.surveyId%>" class="btn listOptionsBtn">Answers</a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
</div>

<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
<script src="/public/js/bootstrap.min.js"></script>

</body>

</html>